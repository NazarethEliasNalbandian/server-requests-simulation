    "def CI(N, M):\n",
    "    global TPLL, TPS_GET, TPS_POST\n",
    "    global NT_SIMPLES, NT_COMPLEJAS\n",
    "    global STLL_SIMPLES, STLL_COMPLEJAS\n",
    "    global STS_SIMPLES, STS_COMPLEJAS\n",
    "    global STO_GET, STO_POST\n",
    "    global CS, CC\n",
    "\n",
    "    HV = timedelta.max\n",
    "\n",
    "    TPLL = timedelta(0)\n",
    "    TPS_GET = [HV for _ in range(N)]\n",
    "    TPS_POST = [HV for _ in range(M)]\n",
    "\n",
    "    NT_SIMPLES = 0\n",
    "    NT_COMPLEJAS = 0\n",
    "\n",
    "    STLL_SIMPLES = timedelta(0)\n",
    "    STLL_COMPLEJAS = timedelta(0)\n",
    "    STS_SIMPLES = timedelta(0)\n",
    "    STS_COMPLEJAS = timedelta(0)\n",
    "    STO_GET = timedelta(0)\n",
    "    STO_POST = timedelta(0)\n",
    "\n",
    "    CS = 0\n",
    "    CC = 0"
   ]
